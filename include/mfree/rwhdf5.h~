/*** rwhdf5.h
     This is a very simple helper header to write data into HDF5 files. 
     It basically just provides helper template routines that wrap around
     the HDF5 provided high-level API funtions for writing
     datasets, images and attirbutes.

    
     Julian Merten
     University of Oxford
     Feb 2015
     julian.merten@physics.ox.ac.uk
     http://www.julianmerten.net
***/

#ifndef    RWHDF5_H
#define    RWHDF5_H

#include <vector>
#include <stdexcept>
#include <cmath>
#include <H5Cpp.h>

#ifndef H5_NO_NAMESPACE
    using namespace H5;
#endif

/*
  This writes a vector array as an image into an HDF5 file. The path to the
  HDF5 object can be provided, otherwise it is written into the root group.
*/

template <class T> void write_data_to_hdf5(string hdf5_filename, vector<T> *input, string path ="/", int x_dim = 0; int y_dim = 0);

/*
  Assigns an attribute to an HDF5 object.
*/

template <class T> void assign_atribute_to_hdf5(string hdf5_filename, string keyword, T *value, string object_path ="/"); 


/*
  This template routine creates the HDF5 datatype from the input vector.
*/




#endif    /*RWHDF5_H*/
